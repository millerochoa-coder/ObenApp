<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObenApp.Views.CreateCodeInventory"
             Title="CreateCodeInventory">

    <Grid BackgroundColor="#FFFFFF">
        <StackLayout Margin="30,10,30,0"
                     BackgroundColor="#FFFFFF">
            <StackLayout Orientation="Horizontal">
                <Frame CornerRadius="100"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Margin="0,0,0,0"
                       Padding="0,0,0,0"
                       HasShadow="True">
                    <Image Source="icon_avatar.jpg"
                           HeightRequest="40"
                           WidthRequest="40"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                </Frame>
                <Label x:Name="LblUsuario"
                       Text=""
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="#A0A0A0"
                       FontFamily="GothamRnd_Medium"
                       Margin="10,0,0,0"/>
            </StackLayout>
            <Frame CornerRadius="10"
                   HasShadow="True"
                   Margin="0,20,0,0"
                   BackgroundColor="#F0F2F5">
                <StackLayout Margin="0,0,0,0"
                         Spacing="10">
                    <Picker x:Name="pkrClaseMaterial"
                            Title="Clase de material"
                            TitleColor="#000000"
                            TextColor="#000000"
                            FontSize="16"
                            SelectedIndexChanged="pkrClaseMaterial_SelectedIndexChanged"/>
                    <Picker x:Name="pkrTipoMaterial"
                            Title="Tipo de material"
                            TitleColor="#000000"
                            TextColor="#000000"
                            FontSize="16"/>
                    <DatePicker x:Name="dpFecha"
                            TextColor="#000000"
                            FontSize="16"/>
                </StackLayout>
            </Frame>
            <StackLayout Margin="0,40,0,0"
                         Spacing="5">
                <Label x:Name="lblGeneradorCodInv"
                       Text="Generar cÃ³digo de inventario"
                       TextColor="#000000"
                       FontAttributes="Bold"
                       FontSize="16"
                       HorizontalOptions="Center"/>
                <Button x:Name="btnGenerarCod"
                        Text="Generar"
                        TextTransform="None"
                        TextColor="#FFFFFF"
                        CornerRadius="10"
                        HeightRequest="45"
                        Margin="70,0,70,5"
                        BackgroundColor="#FF7700"
                        Clicked="btnGenerarCod_Clicked">
                </Button>
                <Frame CornerRadius="10"
                       HasShadow="True"
                       Padding="0,0,0,0"
                       Margin="80,0,80,0">
                    <Entry x:Name="txtCodigoInvGenerado"
                           TextColor="#000000"
                           Text=""
                           FontSize="18"
                           HorizontalTextAlignment="Center"/>
                </Frame>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>