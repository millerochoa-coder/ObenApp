<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObenApp.Views.ConsultationPallet"
             Title="ConsultationPallet">

    <Grid BackgroundColor="#FFFFFF">
        <StackLayout Margin="30,10,30,0"
                     BackgroundColor="#FFFFFF">
            <StackLayout Orientation="Horizontal">
                <Frame CornerRadius="100"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Margin="0,0,0,0"
                       Padding="0,0,0,0"
                       HasShadow="True">
                    <Image Source="icon_avatar.jpg"
                           HeightRequest="30"
                           WidthRequest="30"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                </Frame>
                <Label x:Name="LblUsuario"
                       Text=""
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="#A0A0A0"
                       FontFamily="GothamRnd_Medium"
                       Margin="10,0,0,0"/>
            </StackLayout>
            <StackLayout Margin="10,20,0,5">
                <Label x:Name="lblCapturarCod"
                       Text="Capturar c贸digo de barra:"
                       TextColor="#000000"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>
            </StackLayout>
            <StackLayout>
                <Frame CornerRadius="10"
                       Padding="10,0,10,0"
                       BorderColor="#F0F2F5">
                    <Entry x:Name="txtBarcode"
                           Placeholder="C贸digo de pallet"
                           PlaceholderColor="#A0A0A0"
                           ClearButtonVisibility="WhileEditing"
                           TextColor="#000000"/>
                </Frame>
            </StackLayout>
            <StackLayout Margin="0,10,0,0">
                <Button x:Name="btnConsultar"
                        Text="Consultar"
                        TextTransform="None"
                        TextColor="#FFFFFF"
                        CornerRadius="10"
                        Padding="0,0,0,0"
                        HeightRequest="40"
                        BackgroundColor="#FF7700"
                        Clicked="btnConsultar_Clicked">
                </Button>
            </StackLayout>
            <StackLayout Margin="10,60,0,0">
                <Label x:Name="lblInformacion"
                       Text="Informaci贸n:"
                       TextColor="#000000"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>
            </StackLayout>
            <StackLayout>
                <Frame CornerRadius="10"
                       BorderColor="#F0F2F5"
                       Padding="10,0,10,-9">
                    <Editor x:Name="txtInfoBarcode"
                            Placeholder="Descripci贸n..."
                            PlaceholderColor="#A0A0A0"
                            TextColor="#000000"
                            IsReadOnly="True"
                            Margin="0,0,0,0"
                            HeightRequest="190"/>
                </Frame>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>