<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObenApp.Views.SavePalletInformation"
             NavigationPage.HasNavigationBar="False"
             Title="">

    <Grid>
        <StackLayout Margin="30,10,30,0"
                     BackgroundColor="#FFFFFF">
            <StackLayout Orientation="Horizontal"
                         Margin="0,0,0,20">
                <Frame CornerRadius="100"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Margin="0,0,0,0"
                       Padding="0,0,0,0"
                       HasShadow="True">
                    <Image Source="https://i.postimg.cc/MHhmTPkN/icon-avatar.jpg"
                           HeightRequest="30"
                           WidthRequest="30"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                </Frame>
                <Label x:Name="lblUsuario"
                       Text=""
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="#A0A0A0"
                       FontFamily="GothamRnd_Medium"
                       Margin="10,0,0,0"/>
            </StackLayout>
            <Frame BackgroundColor="Moccasin">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Picker x:Name="pkrTypeValues"
                                Title="Tipo"
                                TextColor="#000000"
                                TitleColor="#000000"
                                VerticalOptions="Center"
                                HorizontalOptions="Start"
                                WidthRequest="70"/>
                        <Switch x:Name="swWarningManualTake"
                                HorizontalOptions="EndAndExpand"
                                OnColor="#FFFFFF"
                                ThumbColor="#FF7700"/>
                        <Label x:Name="lblWarningManualTake"
                               Text="Toma Manual"
                               TextColor="#000000"
                               HorizontalOptions="EndAndExpand"
                               VerticalOptions="Center"/>
                    </StackLayout>
                    <StackLayout Margin="0,20,0,0" Spacing="7">
                        <Frame CornerRadius="10"
                               BorderColor="#F0F2F5"
                               Padding="10,0,10,0"
                               HeightRequest="40">
                            <Entry x:Name="txtBarcodePallet"
                                   Placeholder="Barcode"
                                   PlaceholderColor="#A0A0A0"
                                   TextColor="#000000"
                                   Keyboard="Default"
                                   ClearButtonVisibility="WhileEditing"
                                   TextChanged="OnEntryTextChanged"/>
                        </Frame>
                        <Button x:Name="btnSavePallet"
                                CornerRadius="10"
                                Text="Guardar"
                                TextTransform="None"
                                TextColor="#FFFFFF"
                                HeightRequest="40"
                                BackgroundColor="#FF7700"
                                Clicked="btnSavePallet_Clicked"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <StackLayout>
                <CollectionView x:Name="cvPhysicalInventoryListing"
                                ItemsSource="{Binding PhysicalInventoryListing}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label x:Name="lblTxtCodeNumber"
                                           Text="CÃ³digo: "
                                           TextColor="#000000"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center"/>
                                    <Label x:Name="lblCodeNumber"
                                           Text="{Binding Code}"
                                           TextColor="#000000"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label x:Name="lblTxtType"
                                           Text="Tipo: "
                                           TextColor="#000000"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center"/>
                                    <Label x:Name="lblType"
                                           Text="{Binding Value}"
                                           TextColor="#000000"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center"/>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>