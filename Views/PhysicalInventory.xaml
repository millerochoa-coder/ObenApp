<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObenApp.Views.PhysicalInventory"
             Title="PhysicalInventory">

    <Grid BackgroundColor="#FFFFFF">
        <StackLayout Margin="30,10,30,0"
                     BackgroundColor="#FFFFFF">
            <StackLayout Orientation="Horizontal">
                <Frame CornerRadius="100"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Margin="0,0,0,0"
                       Padding="0,0,0,0"
                       HasShadow="True">
                    <Image Source="icon_avatar.jpg"
                           HeightRequest="30"
                           WidthRequest="30"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                </Frame>
                <Label x:Name="lblUsuario"
                       Text=""
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="#A0A0A0"
                       FontFamily="GothamRnd_Medium"
                       Margin="10,0,0,0"/>
            </StackLayout>
            <StackLayout Margin="0,10,0,0">
                <Picker x:Name="pkrListaActivo"
                        Title="CÃ³digo de inventario"
                        FontSize="16"
                        TextColor="#000000"
                        TitleColor="#000000">
                    <Picker.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                              NumberOfTapsRequired="1"/>
                    </Picker.GestureRecognizers>
                </Picker>
            </StackLayout>
            <StackLayout Spacing="10"
                         Margin="0,0,0,5">
                <Frame CornerRadius="10"
                       BorderColor="#F0F2F5"
                       Padding="10,0,10,0"
                       HeightRequest="40">
                    <Entry x:Name="txtCantidad"
                           Placeholder="Cantidad"
                           PlaceholderColor="#A0A0A0"
                           Keyboard="Numeric"
                           TextColor="#000000"/>
                </Frame>
                <Frame CornerRadius="10"
                       BorderColor="#F0F2F5"
                       Padding="10,0,10,0"
                       HeightRequest="40">
                    <Entry x:Name="txtBarcode"
                           Placeholder="Barcode"
                           PlaceholderColor="#A0A0A0"
                           TextColor="#000000"
                           TextChanged="txtBarcode_TextChanged"/>
                </Frame>
            </StackLayout>
            <StackLayout>
                <Button x:Name="btnCrearCod"
                        CornerRadius="10"
                        Text="Crear CodInv"
                        TextTransform="None"
                        TextColor="#FFFFFF"
                        HeightRequest="40"
                        BackgroundColor="#FF7700"
                        Clicked="btnCrearCod_Clicked">
                </Button>
            </StackLayout>
            <ScrollView>
                <StackLayout>
                    <Frame x:Name="frmDataList">
                        <StackLayout Orientation="Horizontal"
                                     Spacing="80" HorizontalOptions="Center">
                            <Label x:Name="lblCodigo" Text=""/>
                            <Label x:Name="lblDescripcion" Text=""/>
                            <Label x:Name="lblBarcode" Text=""/>
                            <Label x:Name="lblUM" Text=""/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>
            <StackLayout VerticalOptions="EndAndExpand">
                <Button x:Name="btnGuardar"
                        CornerRadius="10"
                        Text="Guardar"
                        TextTransform="None"
                        TextColor="#FFFFFF"
                        HeightRequest="40"
                        BackgroundColor="#FF7700"
                        Clicked="btnGuardar_Clicked">
                </Button>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>