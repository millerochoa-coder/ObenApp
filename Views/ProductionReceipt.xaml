<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObenApp.Views.ProductionReceipt"
             Title="ProductionReceipt">

    <Grid BackgroundColor="#FFFFFF">
        <StackLayout Margin="30,10,30,0"
                     BackgroundColor="#FFFFFF">
            <StackLayout Orientation="Horizontal"
                         Margin="0,0,0,20">
                <Frame CornerRadius="100"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Margin="0,0,0,0"
                       Padding="0,0,0,0"
                       HasShadow="True">
                    <Image Source="icon_avatar.jpg"
                           HeightRequest="30"
                           WidthRequest="30"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                </Frame>
                <Label x:Name="lblUsuario"
                       Text=""
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="#A0A0A0"
                       FontFamily="GothamRnd_Medium"
                       Margin="10,0,0,0"/>
            </StackLayout>
            <StackLayout>
                <Picker x:Name="pkrLocalizacion"
                        Title="LocalizaciÃ³n destino"
                        TextColor="#000000"
                        TitleColor="#000000"
                        VerticalOptions="Center"/>
            </StackLayout>
            <StackLayout>
                <Frame Padding="10,0,10,0"
                       HasShadow="True"
                       BorderColor="#F0F2F5"
                       CornerRadius="10"
                       HeightRequest="45">
                    <Entry x:Name="txtBarcode"
                           Placeholder="Barcode"
                           VerticalTextAlignment="Center"
                           PlaceholderColor="#A0A0A0"
                           TextColor="#000000"
                           ClearButtonVisibility="WhileEditing"
                           VerticalOptions="Center"/>
                </Frame>
            </StackLayout>
            <StackLayout Padding="0,0,0,0"
                         Margin="0,20,0,0">
                <Button x:Name="btnAgregar"
                        Text="Agregar"
                        TextTransform="None"
                        TextColor="#FFFFFF"
                        CornerRadius="10"
                        HeightRequest="40"
                        BackgroundColor="#FF7700"
                        Clicked="btnAgregar_Clicked">
                </Button>
            </StackLayout>
            <StackLayout>
                <Button x:Name="btnGuardar"
                        Text="Guardar"
                        TextTransform="None"
                        CornerRadius="10"
                        TextColor="#FFFFFF"
                        HeightRequest="40"
                        BackgroundColor="#FF7700"
                        Clicked="btnGuardar_Clicked">
                </Button>
            </StackLayout>
            <StackLayout>
                <ListView x:Name="lvBarcode"
                          Margin="0,0,0,0"
                          CachingStrategy="RecycleElement"
                          ItemTapped="lvBarcode_ItemTapped"
                          RefreshControlColor="Transparent">
                    <ListView.ItemTemplate ItemsSource="{Binding BarcodeLista}">
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding CodBarcode}"
                                           FontSize="Large"
                                           TextColor="#A0A1A3"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>