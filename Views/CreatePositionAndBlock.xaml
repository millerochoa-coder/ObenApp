<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObenApp.Views.CreatePositionAndBlock"
             Title="CreatePositionAndBlock"
             NavigationPage.HasNavigationBar="False">

    <Grid BackgroundColor="#FFFFFF">
        <StackLayout Margin="20,10,20,0"
                     BackgroundColor="#FFFFFF">
            <StackLayout Orientation="Horizontal">
                <Frame CornerRadius="100"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Margin="0,0,0,0"
                       Padding="0,0,0,0"
                       HasShadow="True">
                    <Image Source="icon_avatar.jpg"
                           HeightRequest="40"
                           WidthRequest="40"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"/>
                </Frame>
                <Label x:Name="lblUsuario"
                       Text=""
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="#A0A0A0"
                       FontFamily="GothamRnd_Medium"
                       Margin="10,0,0,0"/>
            </StackLayout>
            <Border StrokeThickness="1"
                    StrokeShape="RoundRectangle 7,7,7,7"
                    Padding="10,5,10,7"
                    Margin="0,15,0,0"
                    BackgroundColor="Moccasin">
                <StackLayout Margin="0,15,0,0">
                    <Border StrokeThickness="1"
                            StrokeShape="RoundRectangle 0,40,40,40"
                            Padding="16,7"
                            BackgroundColor="#FFFFFF">
                        <Label x:Name="lblWarningInformation"
                               Text="Recuerde la convenciÃ³n que se debe tener para la creacion de una posicon o bloque."/>
                    </Border>
                    <StackLayout Margin="10,10,0,0"
                                 Orientation="Horizontal">
                        <Label x:Name="lblCreationType"
                               Text="De tipo: "
                               TextColor="#000000"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"/>
                        <Picker x:Name="pkrCreationType"
                                HorizontalOptions="FillAndExpand"
                                Margin="0,0,20,0"
                                Title="Opciones"
                                BackgroundColor="LightGray"/>
                    </StackLayout>
                    <BoxView HeightRequest="1"
                             BackgroundColor="LightGray"/>
                    <StackLayout Margin="10,5,0,5"
                                 Orientation="Horizontal">
                        <Label x:Name="lblName"
                               Text="Nombre: "
                               TextColor="#000000"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"/>
                        <Border Padding="0,0,0,0"
                                Margin="0,5,20,5"
                                HorizontalOptions="FillAndExpand"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10,10,10,10"
                                BackgroundColor="#FFFFFF">
                            <Entry x:Name="txtName"
                                   HorizontalOptions="FillAndExpand"
                                   VerticalOptions="Center"
                                   Margin="0,0,0,0"
                                   MinimumHeightRequest="20"/>
                        </Border>
                    </StackLayout>
                    <BoxView HeightRequest="1" BackgroundColor="LightGray"/>
                    <StackLayout Margin="10,5,0,0"
                                 Orientation="Horizontal">
                        <Label x:Name="lblFloor"
                               Text="Piso: "
                               TextColor="#000000"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"/>
                        <Frame Padding="0,0,0,0"
                               Margin="0,0,0,0">
                            <Entry x:Name="txtFloor"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"
                                   Margin="0,0,0,0"
                                   MinimumHeightRequest="20"/>
                        </Frame>
                    </StackLayout>
                    <StackLayout Margin="0,15,0,0">
                        <Button x:Name="btnSave"
                                Text="Guardar"
                                TextTransform="None"
                                TextColor="#FFFFFF"
                                BackgroundColor="#FF7700"
                                VerticalOptions="Center"
                                HorizontalOptions="Start"
                                Clicked="btnSave_Clicked"/>
                    </StackLayout>
                </StackLayout>
            </Border>
        </StackLayout>
    </Grid>
</ContentPage>